  },
  "version": "0.1.4",
  "dependencies": {
    "aws-cdk-lib": "2.203.1",
    "constructs": "^10.0.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "@types/js-yaml": "^4.0.9",
    "cross-env": "^7.0.3",
    "glob": "^11.0.0"
